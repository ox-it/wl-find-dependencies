<component-set>
	<components>		
		
		<component>
			<role>org.apache.maven.artifact.factory.ArtifactFactory
			</role>
			<role-hint>custom</role-hint>
			<implementation>uk.ac.ox.oucs.plugins.CustomArtifactFactory
			</implementation>
			<requirements>
				<requirement>
					<role>
						uk.ac.ox.oucs.plugins.ArtifactHandlerManager
					</role>
				</requirement>
			</requirements>
		</component>
		
		<component>
			<role>
				uk.ac.ox.oucs.plugins.ArtifactHandlerManager
			</role>
			<role-hint>custom</role-hint>
			<implementation>
				uk.ac.ox.oucs.plugins.CustomArtifactHandlerManager
			</implementation>
			<requirements>
				<requirement>
					<role>org.apache.maven.artifact.handler.manager.ArtifactHandlerManager
					</role>
					<role-hint></role-hint>
					<field-name>originalArtifactManager</field-name>
				</requirement>
			</requirements>
		</component>
    
    <!-- Custom resolver -->
		<component>
			<role>org.apache.maven.artifact.resolver.ArtifactResolver
			</role>
			<role-hint>custom</role-hint>
			<implementation>
				org.apache.maven.artifact.resolver.DefaultArtifactResolver
			</implementation>
			<requirements>
				<requirement>
					<role>org.apache.maven.artifact.manager.WagonManager
					</role>
				</requirement>
				<requirement>
					<role>
						org.apache.maven.artifact.transform.ArtifactTransformationManager
					</role>
				</requirement>
				<requirement>
					<role>org.apache.maven.artifact.factory.ArtifactFactory
					</role>
					<role-hint>custom</role-hint>
				</requirement>
				<requirement>
					<role>org.apache.maven.artifact.resolver.ArtifactCollector
					</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>org.apache.maven.artifact.metadata.ArtifactMetadataSource
			</role>
			<role-hint>custom</role-hint>
			<implementation>
				org.apache.maven.project.artifact.MavenMetadataSource
			</implementation>
			<requirements>
				<requirement>
					<role>org.apache.maven.project.MavenProjectBuilder
					</role>
				</requirement>
				<requirement>
					<role>org.apache.maven.artifact.factory.ArtifactFactory
					</role>
					<role-hint>custom</role-hint>
				</requirement>
				<requirement>
					<role>
						org.apache.maven.artifact.repository.metadata.RepositoryMetadataManager
					</role>
				</requirement>
			</requirements>
		</component>
	</components>
</component-set>